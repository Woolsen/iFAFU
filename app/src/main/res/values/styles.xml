<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="TextAppearance.Information">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Information.Body">
        <item name="android:textSize">15sp</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Button.Blue" parent="Button" tools:keep="@style/Button_Blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn2</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/shape_edit_background</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/blue1</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/blue1</item>
        <item name="colorControlNormal">@color/blue1</item>
        <item name="colorControlActivated">@color/blue1</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue1</item>
    </style>

    <style name="Dialog.Loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


    <!--WToolbarStyle-->
    <style name="woToolbarStyle">
        <item name="android:background">@color/white</item>
        <item name="android:title">123</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="titleTextAppearance">@style/titleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/subtitleTextAppearance</item>
    </style>

    <style name="titleTextAppearance">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="subtitleTextAppearance">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardStyle">
        <item name="android:background">@drawable/shape_card</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TimetableMenuTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#555</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="Information.Widget.Upload.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="AutoCompleteTextView" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar" />

    <style name="textAppearanceHeadline">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textColor">@color/blue1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.IFAFU.Widget.ActionBar.Title.White" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">@color/light_gray</item>
        <item name="android:textColorLink">@color/information_cyan_700</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextAppearance.Body1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Body2">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.009375</item>
    </style>

    <style name="TextAppearance.Subtitle2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.00714285714</item>
    </style>

    <style name="TextAppearance.TextInputEditText">
        <item name="android:textColorHint">@color/blue1</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor</item>
        <item name="android:background">@drawable/shape_edit_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayout.Login" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="editTextStyle">@style/TextInputEditText.Login</item>
    </style>

    <style name="TextInputEditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_edit_background</item>
    </style>
</resources>
